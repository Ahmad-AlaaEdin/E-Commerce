<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Log In</title>
  <style>
    body { background: #f6f7fb; font-family: 'Segoe UI', Arial, sans-serif; color: #222; }
    .container { max-width: 400px; margin: 48px auto; background: #fff; border-radius: 12px; box-shadow: 0 2px 16px rgba(0,0,0,0.04); padding: 32px 24px; }
    h2 { margin-bottom: 24px; font-weight: 600; }
    input, button { width: 100%; padding: 12px; margin: 8px 0 16px 0; border: 1px solid #e0e0e0; border-radius: 6px; font-size: 16px; }
    button { background: #222; color: #fff; border: none; font-weight: 500; cursor: pointer; transition: background 0.2s; }
    button:hover { background: #444; }
    .link { text-align: center; margin-top: 16px; }
    .link a { color: #222; text-decoration: underline; }
  </style>
</head>
<body>
  <%- include('partials/header', { title: title }) %>
  <div class="container">
    <h2>Log In</h2>
    <form id="loginForm">
      <input type="email" name="email" placeholder="Email" required />
      <input type="password" name="password" placeholder="Password" required />
      <button type="submit">Log In</button>
    </form>
    <div class="link">
      Don't have an account? <a href="/signup">Sign up</a>
    </div>
  </div>
  <script>
    document.getElementById('loginForm').onsubmit = async function(e) {
      e.preventDefault();
      const form = e.target;
      const data = {
        email: form.email.value,
        password: form.password.value
      };
      const res = await fetch('/api/v1/users/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      if (res.ok) {
        window.location = '/';
      } else {
        alert('Login failed');
      }
    };
  </script>
  <%- include('partials/footer') %>
</body>
</html>
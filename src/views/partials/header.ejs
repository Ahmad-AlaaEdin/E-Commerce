<header
  style="
    background: #fff;
    border-bottom: 1px solid #eee;
    padding: 16px 0;
    margin-bottom: 32px;
  "
>
  <div
    style="
      max-width: 900px;
      margin: auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    "
  >
    <a
      href="/"
      style="
        font-weight: 700;
        font-size: 22px;
        color: #222;
        text-decoration: none;
      "
      >E-Commerce</a
    >
    <nav>
      <a href="/" style="margin-right: 24px; color: #222; text-decoration: none"
        >Home</a
      >
      <a
        href="/me"
        style="margin-right: 24px; color: #222; text-decoration: none"
        >Profile</a
      >
      <a
        href="/orders"
        style="margin-right: 24px; color: #222; text-decoration: none"
        >Orders</a
      >
      <% if (typeof user !== 'undefined' && user) { %>
      <span
        style="display: inline-flex; align-items: center; margin-right: 16px"
      >
        <img
          src="<%= user.photo || 'https://via.placeholder.com/32' %>"
          alt="User"
          style="
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 8px;
          "
        />
        <span style="font-weight: 500"><%= user.name %></span>
      </span>
      <a href="/logout" style="color: #222; text-decoration: none">Logout</a>
      <% } else { %>
      <a href="/login" style="color: #222; text-decoration: none">Login</a>
      <% } %>
    </nav>
  </div>
</header>
<main style="min-height: 70vh"></main>

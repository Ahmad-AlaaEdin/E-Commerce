<div class="product">
  <img src="<%= product.image || 'https://via.placeholder.com/180' %>" alt="<%= product.name %>" />
  <h3><%= product.name %></h3>
  <p><%= product.description || '' %></p>
  <div class="price">$<%= product.price %></div>
  <button onclick="addToCart('<%= product.id %>')">Add to Cart</button>
</div>
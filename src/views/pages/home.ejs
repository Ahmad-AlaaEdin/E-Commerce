<%- contentFor('body') %>

<div class="hero-section bg-light py-5 mb-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1>Welcome to E-Commerce</h1>
                <p class="lead">Discover amazing products at great prices.</p>
                <a href="/products" class="btn btn-primary">Shop Now</a>
            </div>
            <div class="col-md-6">
                <img src="/img/hero-image.jpg" alt="Shopping" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>

<section class="featured-products mb-5">
    <div class="container">
        <h2 class="mb-4">Featured Products</h2>
        <div class="row">
            <% if (locals.featuredProducts && featuredProducts.length > 0) { %>
                <% featuredProducts.forEach(product => { %>
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text"><%= product.description.substring(0, 100) %>...</p>
                                <p class="card-text"><strong>$<%= product.price.toFixed(2) %></strong></p>
                                <a href="/product/<%= product.id %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col">
                    <p>No featured products available.</p>
                </div>
            <% } %>
        </div>
    </div>
</section>

<section class="categories mb-5">
    <div class="container">
        <h2 class="mb-4">Shop by Category</h2>
        <div class="row">
            <% if (locals.categories && categories.length > 0) { %>
                <% categories.forEach(category => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= category.name %></h5>
                                <p class="card-text"><%= category.description %></p>
                                <a href="/categories/<%= category.id %>" class="btn btn-outline-primary">Browse <%= category.name %></a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col">
                    <p>No categories available.</p>
                </div>
            <% } %>
        </div>
    </div>
</section> 